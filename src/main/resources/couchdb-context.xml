<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id='httpClientConnectionManager'
		class='org.apache.http.impl.conn.PoolingClientConnectionManager'>

	</bean>

	<bean id='httpClient' class='org.apache.http.impl.client.DefaultHttpClient'>
		<constructor-arg ref='httpClientConnectionManager' />
	</bean>

	<bean id="couchDBTemplate"
		class="name.robertburrelldonkin.template4couchdb.CouchDBTemplate"
		destroy-method="shutdown">
		<constructor-arg name='restClient'>
			<bean
				class='name.robertburrelldonkin.template4couchdb.rest.HttpClientRestClient'>
				<constructor-arg name='httpClient' ref='httpClient'></constructor-arg>
				<constructor-arg name='responseHandlerFactory'>
					<bean
						class="name.robertburrelldonkin.template4couchdb.rest.DefaultCodecFactory"></bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg name='database'>
			<bean class='name.robertburrelldonkin.template4couchdb.CouchDatabase'>
				<constructor-arg name='name' value="sample"></constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg name='couchResponseUnmarshaller'>
			<bean
				class='name.robertburrelldonkin.template4couchdb.StringDocumentMapper'></bean>
		</constructor-arg>
	</bean>

</beans>